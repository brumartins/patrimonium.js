{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "lib": ["es6", "es2015"],
      "declaration": true,
      "outDir": "dist",
      "rootDir": "src",
      "strict": true,
      "sourceMap": true
    },
    "exclude": [
      "dist",
      "node_modules",
      "src/*.spec.ts"
    ],
    "include": [
      "src"
    ]
  }